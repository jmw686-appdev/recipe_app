<h1>
  All recipes
</h1>

<a href="/recipes/new">
  Add a new recipe
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @recipes.each do |recipe| %>
  <tr>
    <td>
      <%= recipe.id %>
    </td>

    <td>
      <%= recipe.name %>
    </td>

    <td>
      <%= time_ago_in_words(recipe.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(recipe.updated_at) %> ago
    </td>

    <td>
      <a href="/recipes/<%= recipe.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
