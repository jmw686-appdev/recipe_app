<h1>Users</h1>
<%= link_to "Add a new Recipe", recipes_new_path %>
<br>
<% @users.each do |user| %>
  <%= link_to user.username, user_path(user) %>
  <hr>
  <% !if user.recipes.empty? %>
    <% user.recipes.each do |recipe| %>
      <%= link_to recipe.name,  recipes_path(recipe) %>
      <% recipe.ingredients.each do |i| %>
        <%= i.name %>
      <% end %>
      <hr>
    <% end %>
  <% end %>
<% end %>
