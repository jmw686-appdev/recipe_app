<h1>Users</h1>
<%= link_to "Add a new Recipe", recipes_new_path %>
<br>
<div class="users">
  <% @users.each do |user| %>
    <%= link_to user.username, user_path(user) %>
    <hr>
    <% if !user.recipes.empty? %>
      <% user.recipes.each do |r| %>
        <%= link_to r.name, recipe_path(r) %>
        <br>
        <% r.ingredients.each do |i| %>
          * <%= i.name %> | &nbsp;&nbsp;<%= i.amount %>: &nbsp;&nbsp;<%= i.units %>
          <br>
        <% end %>
      <% end %>

    <% end %>
  <% end %>

</div>
